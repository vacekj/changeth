{
  "name": "@change/monorepo",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "frontend:dev": "pnpm --filter frontend dev",
    "frontend:start": "pnpm --filter frontend start",
    "prepare": "husky install"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "next": "^13.0.0",
      }
    }
  },
  "devDependencies": {
    "turbo": "^1.8.3",
    "typescript": "^4.9.5"
  }
}
